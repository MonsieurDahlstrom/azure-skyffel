{
  "name": "@monsieurdahlstrom/pulumi-azure",
  "version": "0.1.0",
  "description": "opinionated pulumi library to generate common azure resources",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "commonjs",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "ci": "npm run build && npm run format",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run"
  },
  "repository": "https://github.com/monsieurdahlstrom/pulumi-azure.git",
  "keywords": [
    "pulumi",
    "azure",
    "iac"
  ],
  "publishConfig": {
    "@monsieurdahlstrom:registry": "https://npm.pkg.github.com"
  },
  "author": "Mathias Dahlstr√∂m",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MonsieurDahlstrom/pulumi-azure/issues"
  },
  "homepage": "https://github.com/MonsieurDahlstrom/pulumi-azure#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@types/jsbn": "^1.2.33",
    "@types/node": "^22.10.7",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.3"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "files": [
    "lib/**",
    "package.json"
  ],
  "dependencies": {
    "@ediri/azapi": "^1.12.2",
    "@pulumi/azure-native": "^2.83.0",
    "@pulumi/cloudflare": "^5.48.0",
    "@pulumi/random": "^4.17.0",
    "jsbn": "^1.1.0"
  }
}
