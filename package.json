{
  "name": "@monsieurdahlstrom/pulumi-azure",
  "version": "0.1.0",
  "description": "opinionated pulumi library to generate common azure resources",
  "main": "index.js",
  "types": "index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc && cp package.json dist",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run test",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "vitest run"
  },
  "repository": "https://github.com/monsieurdahlstrom/pulumi-azure.git",
  "keywords": [
    "pulumi",
    "azure",
    "iac"
  ],
  "publishConfig": {
    "@monsieurdahlstrom:registry": "https://npm.pkg.github.com"
  },
  "author": "Mathias Dahlstr√∂m",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/MonsieurDahlstrom/pulumi-azure/issues"
  },
  "homepage": "https://github.com/MonsieurDahlstrom/pulumi-azure#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.2",
    "@types/node": "^22.10.2",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "next",
        "prerelease": "beta"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      ["@semantic-release/npm", { "pkgRoot": "./dist" }],
      ["@semantic-release/github", {
        "assets": [
          "package.json",
          "README.md",
          "CHANGELOG.md",
          "dist/**/*.{js}"
        ],
        "message": "chore: Release ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }]
    ]
  },
  "dependencies": {
    "@pulumi/azure-native": "^2.79.0"
  }
}
